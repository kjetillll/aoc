use v5.10;
my($x,$y,%grid,%freq)=(0,0);
while(<>){
    for(/./g){
	$grid{$x,$y}=$_;
	push @{$freq{$_}},[$x,$y] if /\w/;
	$x++;
    }
    $x=0;
    $y++;
}
say "ant grid: ".keys%grid;
say "ant freq: ".keys%freq;
for my $letter (sort keys%freq){
    my @lst=@{$freq{$letter}};
    say "l: $letter   lst: ".@lst;
    for my $p1 (0..$#lst){
	for my $p2 (0..$#lst){
	    next if $p1==$p2;
	    my($x1,$y1,$x2,$y2)=(@{$lst[$p1]},
				 @{$lst[$p2]});
	    my $ax=$x1-($x2-$x1);
	    my $ay=$y1-($y2-$y1);
#	    die"x1: $x1   y1: $y1   x2: $x2   y2: $y2   ax: $ax   ay: $ay";
	    $an{$ax,$ay}++ if exists$grid{$ax,$ay};
	}
    }
}
say "Answer: ".keys%an;
